<%= render "shared/header_user" %>

<%= form_with model: @user, url: user_registration_path, method: :post, class: 'registration-main', local: true do |f| %>
  <div class='form-wrap-user'>
    <div class='form-header'>
      <div class='form-header-text'>
        会員情報入力
      </div>
    </div>

    <%= render 'shared/error_messages', model: f.object %>

    <div class="form-group">
      <div class="form-text-user">プロフィール画像</div>
      <label for="profile-image" class="image-input">
        <div class="image-input-btn">
          <div id="image-list">
            <div><%= image_tag "default_user.png", class:"image-list" %></div>
          </div>
        </div>
        <%= f.file_field :image, class:"profile-image", id:"profile-image" %>
      </label>
    </div>

    <div class="form-group">
        <label class="form-text-user">ニックネーム</label>
      <%= f.text_field :name, class:"input-default", id:"name", placeholder:"*必須", autofocus: true %>
    </div>

    <div class="form-group">
        <label class="form-text-user">メールアドレス</label>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"*必須", placeholder:"" %>
    </div>

    <div class="form-group">
        <label class="form-text-user">パスワード</label>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字(英字と数字の両方を含む)" %>
    </div>

    <div class="form-group">
        <label class="form-text-user">パスワード(確認)</label>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>

    <div class='register-btn'>
      <%= f.submit "会員登録" ,class:"register-red-btn" %>
    </div>

  </div>

<% end %>