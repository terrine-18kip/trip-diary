<%= render "shared/header_user" %>

<%= form_with model: @user, url:user_session_path, class: 'registration-main', local: true do |f| %>
  <div class='form-wrap-user'>
    <div class='form-header'>
      <div class='form-header-text'>
        会員情報入力
      </div>
    </div>

    <%= render 'shared/error_messages', model: f.object %>

    <div class="form-group">
      <label class="form-text-user">メールアドレス</label>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"*必須", autofocus: true %>
    </div>

    <div class="form-group">
      <label class="form-text-user">パスワード</label>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"*必須" %>
    </div>
    
    <div class='register-btn'>
      <%= f.submit "ログイン" ,class:"register-red-btn" %>
    </div>
  </div>
<% end %>