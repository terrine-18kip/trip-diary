<%= render "shared/header" %>

  <div class='form-header'>
    <h1 class='form-header-text'>
      旅の編集
    </h1>
  </div>

<%= render partial: "form", locals: { trip: @trip } %>

  <div>
    <% if @plans %>
      <% @plans.each do |plan| %>
        <div>
          <%= "#{plan.day}日目" %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div>
    <%= form_with(model: [@trip, @plan], local: true) do |f1| %>
      <%= f1.number_field :day %>日目
      <%= f1.submit '追加' %>
    <% end %>
  </div>